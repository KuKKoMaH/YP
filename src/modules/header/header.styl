.header
  display: flex
  flex-direction: row
  height: 83px
  align-items: center

  @media (max-width: $breakpoint-md - 1)
    padding: 0
    flex-direction: column-reverse
    align-items: stretch
    height: auto

  &__logo
    flex: 1
    display: flex
    flex-direction: row
    align-items: center
    @media (max-width: $breakpoint-md - 1)
      flex: 0 auto
      height: 55px
      padding: 0 21px
      justify-content: space-between

  &__img
    height: 100%
    @media (max-width: $breakpoint-md - 1)
      width: 61px

  &__info
    font-size: 16px
    color: #363940
    margin-left: 18px
    @media (max-width: $breakpoint-md - 1)
      font-size: 12px
      margin-left: 0

  &__contacts
    flex: 1
    display: flex
    flex-direction: row
    justify-content: space-between
    font-size: 16px
    color: #2d2d2d
    @media (max-width: $breakpoint-md - 1)
      flex: 0 auto
      align-items: center
      background: #e6e6e6
      height: 27px
      font-size: 10px
      padding: 0 21px

  &__phone

    &:hover
      text-decoration: underline
    &:before
      content: ''
      display: inline-block
      vertical-align: middle
      background: url(../../img/phone.png)
      width: 29px
      height: 29px
      background-size: 29px 29px
      margin-right: 21px
      @media (max-width: $breakpoint-md - 1)
        width: 12px
        height: 12px
        background-size: 12px 12px
        margin-right: 6px

  &__email
    &:hover
      text-decoration: underline

    &:before
      content: ''
      display: inline-block
      vertical-align: middle
      background: url(../../img/letter.png)
      width: 31px
      height: 31px
      background-size: 31px 31px
      margin-right: 21px
      @media (max-width: $breakpoint-md - 1)
        width: 12px
        height: 12px
        background-size: 12px 12px
        margin-right: 6px
